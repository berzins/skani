<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_primary_action_button_background"
    android:minWidth="160dp"
    android:paddingHorizontal="48dp"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/title"
        style="@style/TextHeaderMid"
        android:textColor="@drawable/selector_primary_action_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_action_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/left_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_album_24" />
</androidx.constraintlayout.widget.ConstraintLayout>
