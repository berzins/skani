<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/title"
        style="@style/TextHeaderMid"
        android:textColor="@drawable/selector_primary_action_button_text"
        android:background="@drawable/selector_primary_action_button_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="160dp"
        android:text="@string/default_action_button_text"
        android:paddingHorizontal="48dp"
        android:paddingVertical="12dp" />

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginVertical="12dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginStart="12dp"
        app:srcCompat="@drawable/ic_album_24" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_anim"
        android:visibility="invisible"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="1"
        app:lottie_fileName="action_btn_loading_anim.json"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</FrameLayout>
